package CollectionsPackage;

import java.util.ArrayList;
import java.util.List;

public class List_Interface_Demo {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		//1. How to create object with List Interface and ArrayList Class
		//2. How to add elements into List
		//3. How to remove elements from List
		
		list_add_elements();

	}

	public static void list_add_elements()
	{
		//Here <Integer> is a wrapper class
		//With the below statement we made to import java.util.ArrayList and java.util.List packages
		//ArrayList also index based and starts from 0
		//List will store sequence of values
		//Drop down list box implementation in Selenium we need List interface
		
		List<Integer> list = new ArrayList<Integer>();
		list.add(100);
		list.add(200);
		list.add(300);
		list.add(400);
		list.add(500);
		list.add(600);
		list.add(700);
		list.add(800);
		list.add(900);
		
		//System.out.println(list.get(0));
		
		//list.remove will remove the value of the list at the specified index
		list.remove(8);

		
		for(Integer i:list)
		{
			System.out.println(i);
			i++;
		}
		
		//we can use size() method of list to get the size of List
		
		for (int j=0; j<list.size(); j++)
		{
			System.out.println(list.get(j));
		}
		
		List<Integer> Newlist = new ArrayList<Integer>();
		Newlist.add(1);
		Newlist.add(2);
		Newlist.add(3);
		Newlist.add(4);
		Newlist.add(5);
		Newlist.add(6);
		Newlist.add(7);
		Newlist.add(8);
		Newlist.add(9);
		
		list.addAll(Newlist);
		
		
	}
	
	
}
